{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/node"
    },
    {
      "src": "server/package.json",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/auth", "dest": "/server/api/auth.js" },
    { "src": "/api/messages", "dest": "/server/api/messages.js" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/client/$1" }
  ]
}
